<h2 class="centered"> Create a new user </h2>

<form action="/private/users" method="POST">

  <div class="form-group col-xs-4 centered">
    <label class="centered" for="username">Username</label>
    <input class="form-control" type="text" id="username" name="username">
  </div>

  <div class="form-group col-xs-4 centered">
    <label class="centered" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name">
  </div>


  <div class="form-group col-xs-4 centered">
    <label class="centered" for="familyName">Family Name</label>
    <input class="form-control" type="text" name="familyName" id="familyName">
  </div>

  <div class="form-group col-xs-4 centered">
    <label class="centered" for="password">Password</label>
    <input class="form-control" type="password" name="password" id="password">
  </div>

  <div class="form-group col-xs-4 centered">
    <label class="centered" for="role">Role</label>
    <select class="form-control" type="text" name="role" id="role">
      <option value="Boss">Boss</option>
      <option value="Developer">Developer</option>
      <option value="TA">TA</option>
      <option value="Student">Student</option>
    </select>
  </div>

 <button type="submit" class="btn btn-primary center-block btn-submit">Create</button>

</form>
